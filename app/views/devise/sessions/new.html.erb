<div class="grid-container">
  <div class="grid-item"></div>

  <div class="grid-item signin-text item-vertical-pos-signin-page">
    Welcome to Tax Tracker
    <br>Enjoy the benefit of tracking
    your taxes for free.
  </div>

   <div class="grid-item signin-box-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class => 'text-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, :class => 'text-label' %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field" style="padding-bottom: 10px">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="field button-in-page">
        <%= f.submit "Log in", :class => 'button small' %>
      </div>
    <% end %>

    <div class="field">
      <%= render "devise/shared/links" %>
    </div>

  </div>
    <div class="grid-item"></div>
</div>
