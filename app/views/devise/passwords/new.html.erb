
<div class="container-signin-signup">
  <div class="container-inside">
    <nav>
      <a href="/">
        <img src="/assets/Logo.png" alt="">
      </a>
    </nav>


    <div class="main-signin-signup">
      <section>
         <h2>Forgot your password?</h2>
         <div class="form">
           <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
             <%= render "devise/shared/error_messages", resource: resource %>
             <%= f.label "email:", :class => 'label' %><br>
             <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'input' %><br>
             <%= f.submit "Send me reset password instructions", :class => 'button' %>
           <% end %>
           <p>
             <%= render "devise/shared/links" %>
           </p>
         </div>
      </section>
    </div>
  </div>
</div>
