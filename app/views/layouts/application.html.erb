<!DOCTYPE html>
<html>
<head>
  <title>TaxTracker</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= javascript_include_tag "vendor/modernizr" %>

  <%= csrf_meta_tags %>
</head>
<body>
  
  <div class="top-bar">
    <div class="title-area">
      <div class="name">
        <a href="/">
          <img class="logo" src="/assets/TaxTrackerlogo.png"/>
        </a>
      </div>
    </div>

    <section class="row">
      <ul class="small-10 medium-10 large-10 small-centered columns">
        <%- if current_user -%>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class:"signup signoutbox" %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path, class:"signup signupbox" %></li>
          <li><%= link_to 'Sign In', new_user_session_path, class:"signin signinbox" %></li>
        <%- end -%>
      </ul>
    </section>
  </div>



  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>

  <%- if Rails.env.development? || Rails.env.test? -%>
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>

  <%= yield :extra_footer %>
</body>
</html>
